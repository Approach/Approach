<Template xmlns:Component="Component://approach.im" xmlns:Render="Render://approach.im">
<Component:HomeDisplay type="json">
{
	"Featured":
	{
	    "img" : "poster",
	    "headline" : "heading",
	    "content" : "post"
	}
}
</Component:HomeDisplay>
<Render:Markup bind="HomeDisplay" tag="li" class="Featured" >
	<span class="Box FlowLeft" ><img src="[@ poster @]" /></span>
	<span class="Heading">[@ heading @]</span>
	<article class="Typography">[@ post @]</article>
</Render:Markup>
</Template>
